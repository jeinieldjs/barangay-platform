<div class="show-announcement-wrapper">
  <h1 class="page-title"><%= @announcement.title %></h1>

  <div class="show-announcement-details">
    <p><strong style="color: #5C821A;">Posted by:</strong> <%= current_user.first_name.titleize %></p>
    <p><strong style="color: #5C821A;">Created At:</strong> <%= @announcement.created_at.strftime("%d %b %Y %H:%M:%S") %></p>
    <p><strong style="color: #5C821A;">Updated At:</strong> <%= @announcement.updated_at.strftime("%d %b %Y %H:%M:%S") %></p>
    <p><strong style="color: #5C821A;">Content:</strong> <%= @announcement.content %></p>

    <div class="show-announcement-actions">
      <%= link_to 'Back', admin_announcements_path, class: "action-link" %>
      <%= link_to 'Edit', edit_admin_announcement_path(@announcement), class: "action-link" %>
      <%= button_to 'Destroy', admin_announcement_path(@announcement), method: :delete, data: { confirm: 'Are you sure?' }, class: "delete-button action-link"  %>
    </div>
  </div>
</div>
